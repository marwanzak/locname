<Alloy>
	<Window class="container">
		<View id="main_top_view" class="top_view"></View>
		<ImageView id="main_logo"></ImageView>
		<View id="seach_view">
			<View id="left_search_view">
				<TextField id="main_search_text"></TextField>
			</View>
			<View id="right_search_view">
				<ImageView id="search_but"></ImageView>
			</View>
		</View>
		<ImageView id="reg_loc_but"></ImageView>
	</Window>
	<Window class="container" id="step1_win">
		<View id="" class="top_view">
			<ImageView class="back_but"></ImageView>
			<Label id="new_top_label">Step 1</Label>
		</View>
		<View id="new_pos_top_view" class="top_half_view">
			<View class="hor_view">
				<Label class="check_label">Country</Label>
				<TextField id="country_text"></TextField>
			</View>
			<View class="hor_view">
				<Label class="check_label">City</Label>
				<TextField id="city_text"></TextField>
			</View>
			<View class="hor_view">
				<Label class="check_label">Search word</Label>
				<TextField id="pos_word_text"></TextField>
			</View>
			<ImageView id="get_place_but"></ImageView>
		</View>
		<View id="new_pos_bottom_view" class="bottom_half_view">
			<Label id="new_bottom_label">Register a LocName to Your current place</Label>
			<ImageView id="check_pos"></ImageView>
		</View>
	</Window>
	<Window id="countries_win" class="container">
		<ScrollView id="countries_scroll" class="scroll"></ScrollView>
		<View id="" class="bottom_view">
			<Button id="countries_back" class="back_but" ></Button>
		</View>
	</Window>
	<Window id="cities_win" class="container">
		<ScrollView id="cities_scroll" class="scroll"></ScrollView>
		<View id="" class="bottom_view">
			<Button id="cities_back" class="back_but" ></Button>
		</View>
	</Window>
	<Window id="step2_win" class="container">
		<View id="" class="top_view">
			<ImageView class="back_but"></ImageView>
			<Label id="">Step 2</Label>
		</View>
		<View id="step2_map"></View>
		<View id="step2_third_view">
			<Label id="step2_bottom_label"></Label>
		</View>
		<View id="step2_bottom_view">
			<ImageView id="to_step3_but"></ImageView>
		</View>
	</Window>
	<Window id="step3_win" class="container">
		<View id="" class="top_view">
			<ImageView class="back_but"></ImageView>
			<Label id="" class="top_label">Step 3</Label>
		</View>
		<View id="step3_top_view">
			<View class="hor_view">
				<Label class="check_label">LocName</Label>
				<TextField id="step3_name_text"></TextField>
			</View>
			<View class="hor_view">
				<Label class="check_label">Catagory</Label>
				<TextField id="step3_cat_text" editable=false></TextField>
			</View>
			<View class="hor_view">
				<Label class="check_label">Part</Label>
				<TextField id="step3_pp_text" editable=false></TextField>
			</View>
			<View class="hor_view" height="100">
				<Label class="check_label">Address</Label>
				<TextArea id="step3_address_text" editable=false></TextArea>
			</View>
		</View>
		<View id="step3_bottom_view">
			<ImageView id="to_step4_but"></ImageView>
		</View>
	</Window>
	<Window id="step4_win" class="container"></Window>
	<Window id="cat_win" class="modal_win">
		<View id="cat_view" class="modal_view">
			<Label id="personal_label">Personal</Label>
			<Label id="business_label">Business</Label>
			<Label id="event_label">Event</Label>
		</View>
	</Window>
	<Window id="pp_win" class="modal_win">
		<View id="pp_view" class="modal_view">
			<Label id="public_label">Public</Label>
			<Label id="private_label">Private</Label>
		</View>
	</Window>
</Alloy>